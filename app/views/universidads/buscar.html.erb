<%= form_tag buscar_universidad_path, :method => 'get' do %>
  <p>
    <%= text_field_tag :search, params[:search] %>
    <%= submit_tag "Buscar", :name => nil %>
  </p>
<% end %>
<h1>Listado de Universidades</h1>




<table class="table table-striped table-bordered">
  <tr>
    <th>Nombre</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @universidads.each do |universidad| %>
  <tr>
    <td><%= universidad.nombre %></td>
    <td><%= link_to 'Show', universidad %></td>
    <td><%= link_to 'Edit', edit_universidad_path(universidad) %></td>
    <td><%= link_to 'Destroy', universidad, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

